<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:layout_gravity="center"
    android:layout_margin="3dp"
    android:id="@+id/root_view"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardItem">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/display_details"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="155dp"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="@string/issue"
                android:textStyle="bold"
                android:lines="1"
                android:textColor="@color/profile"
                android:textAllCaps="true"
                android:layout_alignParentTop="true"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/city"
                android:text="@string/issue"
                android:textStyle="bold"
                android:textColor="@color/profile"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:textColor="@color/profile"
                android:text="@string/date"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/cardthumb">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorPrimary">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/glidepro"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/thumbnail"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/map_preview" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/navtrigger"
                        android:visibility="gone"
                        android:background="#b4000000">
                        <RelativeLayout
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="25dp">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="10dp"
                                android:id="@+id/locate"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/map"
                                android:clickable="true"
                                android:focusable="true"
                                style="@style/SelectableItemBackgroundBorderless"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="10dp"
                                android:id="@+id/navigate"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/navigation"
                                android:clickable="true"
                                android:focusable="true"
                                style="@style/SelectableItemBackgroundBorderless"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_details"
                            android:text="@string/issue"
                            android:textStyle="bold"
                            android:lines="1"
                            android:textColor="@color/colorPrimary"
                            android:textAllCaps="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:textSize="35sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/city_details"
                            android:text="@string/issue"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/name_details"
                            android:textSize="16sp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_below="@id/city_details"
                            android:background="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/date_details"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/date"
                            android:visibility="gone"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"/>
                        <RelativeLayout
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingTop="10dp">
                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true">
                                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                    android:id="@+id/intensity"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    app:direction="clockwise"
                                    app:dotColor="@color/colorPrimary"
                                    app:dotWidth="16dp"
                                    app:drawDot="true"
                                    app:enableProgressAnimation="true"
                                    app:progressStrokeWidth="6dp"
                                    app:progressBackgroundStrokeWidth="2dp"
                                    app:progressColor="@color/colorPrimary"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/intensity_tag"
                                    android:layout_below="@+id/intensity"
                                    android:layout_marginTop="3dp"
                                    android:textColor="@color/colorPrimary"
                                    android:text="@string/intensity"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true">
                                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                    android:id="@+id/time"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    app:direction="clockwise"
                                    app:dotColor="@color/colorPrimary"
                                    app:dotWidth="16dp"
                                    app:drawDot="true"
                                    app:enableProgressAnimation="true"
                                    app:progressStrokeWidth="6dp"
                                    app:progressBackgroundStrokeWidth="2dp"
                                    app:progressColor="@color/colorPrimary"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/time_tag"
                                    android:layout_below="@+id/time"
                                    android:layout_marginTop="3dp"
                                    android:textColor="@color/colorPrimary"
                                    android:text="@string/timeleft"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
